<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>62.0</apiVersion>
    <areMetricsLoggedToDataCloud>false</areMetricsLoggedToDataCloud>
    <constants>
        <description>Cantidad de horas a sumar para transformar la hora recibida en GMT.</description>
        <name>HORASASUMAR</name>
        <dataType>Number</dataType>
        <value>
            <numberValue>3.0</numberValue>
        </value>
    </constants>
    <description>Se completa la fecha del pago.</description>
    <environments>Default</environments>
    <formulas>
        <name>Date_Approved_MP_Formula</name>
        <dataType>Date</dataType>
        <expression>DATEVALUE({!inputPayment.date_approved})</expression>
    </formulas>
    <formulas>
        <name>Date_Created_MP_Formula</name>
        <dataType>Date</dataType>
        <expression>DATEVALUE({!inputPayment.date_created})</expression>
    </formulas>
    <formulas>
        <name>Date_Last_Updated_Formula</name>
        <dataType>Date</dataType>
        <expression>DATEVALUE({!inputPayment.date_last_updated})</expression>
    </formulas>
    <formulas>
        <name>EstadoPago_cFieldFormula</name>
        <dataType>String</dataType>
        <expression>IF({!inputPayment.status} = &apos;approved&apos;, &apos;Pagado&apos;, &apos;&apos;)</expression>
    </formulas>
    <formulas>
        <name>forFechaPagoMP</name>
        <dataType>DateTime</dataType>
        <expression>DATETIMEVALUE(SUBSTITUTE(SUBSTITUTE({!inputPayment.date_approved}, &quot;T&quot;, &quot; &quot;), &quot;Z&quot;, &quot;&quot;))+{!HORASASUMAR}/24</expression>
    </formulas>
    <formulas>
        <name>Money_Release_Date_Formula</name>
        <dataType>Date</dataType>
        <expression>DATEVALUE({!inputPayment.money_release_date})</expression>
    </formulas>
